<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="NanoBananaProWinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    RequestedTheme="Dark"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="AppBackgroundColor">#111111</Color>
            <Color x:Key="CardBackgroundColor">#1E1E1E</Color>
            <Color x:Key="CardBorderColor">#343434</Color>
            <Color x:Key="PanelElevatedColor">#252526</Color>
            <Color x:Key="AccentColor">#4C8DFF</Color>
            <Color x:Key="AccentColorSecondary">#6AB0FF</Color>
            <Color x:Key="SuccessColor">#4CC38A</Color>
            <Color x:Key="WarningColor">#D8B04B</Color>
            <Color x:Key="ErrorColor">#E06969</Color>
            <Color x:Key="TitleColor">#F5F5F5</Color>
            <Color x:Key="BodyColor">#E0E0E0</Color>
            <Color x:Key="SubtleColor">#A8A8A8</Color>

            <SolidColorBrush x:Key="AppPageBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
            <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}" />
            <SolidColorBrush x:Key="PanelElevatedBrush" Color="{StaticResource PanelElevatedColor}" />
            <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="#161616" />
            <SolidColorBrush x:Key="TopBarBorderBrush" Color="#2B2B2B" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
            <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentColorSecondary}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
            <SolidColorBrush x:Key="TitleBrush" Color="{StaticResource TitleColor}" />
            <SolidColorBrush x:Key="BodyBrush" Color="{StaticResource BodyColor}" />
            <SolidColorBrush x:Key="SubtleBrush" Color="{StaticResource SubtleColor}" />

            <SolidColorBrush x:Key="LogInfoBrush" Color="{StaticResource BodyColor}" />
            <SolidColorBrush x:Key="LogSuccessBrush" Color="{StaticResource SuccessColor}" />
            <SolidColorBrush x:Key="LogWarningBrush" Color="{StaticResource WarningColor}" />
            <SolidColorBrush x:Key="LogErrorBrush" Color="{StaticResource ErrorColor}" />

            <LinearGradientBrush x:Key="HeroGradientBrush" EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#1C2540" Offset="0" />
                <GradientStop Color="#12192C" Offset="0.6" />
                <GradientStop Color="#101625" Offset="1" />
            </LinearGradientBrush>

            <RadialGradientBrush x:Key="BlueGlowBrush" Center="0.5,0.5" RadiusX="1.0" RadiusY="1.0">
                <GradientStop Color="#665D8CFF" Offset="0.0" />
                <GradientStop Color="#00000000" Offset="1.0" />
            </RadialGradientBrush>

            <RadialGradientBrush x:Key="CyanGlowBrush" Center="0.5,0.5" RadiusX="1.0" RadiusY="1.0">
                <GradientStop Color="#3300C2FF" Offset="0.0" />
                <GradientStop Color="#00000000" Offset="1.0" />
            </RadialGradientBrush>

            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource TitleBrush}" />
                <Setter Property="Margin" Value="0,0,0,10" />
            </Style>

            <Style x:Key="BodyTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource BodyBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="HintTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource SubtleBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="FontSize" Value="12" />
            </Style>

            <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,10" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style x:Key="PositiveActionButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryActionButtonStyle}">
                <Setter Property="Background" Value="{StaticResource SuccessBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}" />
            </Style>

            <Style x:Key="GhostButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#1F2A2A2A" />
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
                <Setter Property="Foreground" Value="{StaticResource BodyBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="10,8" />
            </Style>

            <Style x:Key="ModeToggleStyle" TargetType="ToggleButton">
                <Setter Property="Padding" Value="18,10" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{StaticResource BodyBrush}" />
                <Setter Property="Background" Value="#1020355F" />
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
